body {
  /* font-family: Roboto, Arial, sans-serif; */
 font-family: 'Trebuchet MS', Arial, sans-serif;

  margin: 0;
}
.basic-container {
  padding: 0px;
}
.example-container {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.example-is-mobile .example-toolbar {
  position: fixed;
  z-index: 2;
  background-color: #ffffff;
}
.example-toolbar {
  background-color: #ffffff;
}
h1.example-app-name {
  margin-left: 8px;
}

.example-sidenav-container {
  flex: 1;
  background: #f5f5f5;
  box-shadow: none;
}

.example-is-mobile .example-sidenav-container {
  flex: 1 1 auto;
  z-index: 3;
  background: #f5f5f5;
    box-shadow: none;
}


.mat-drawer:not(.mat-drawer-side) {
    box-shadow: none;
}




/* width */
::-webkit-scrollbar {
  position: absolute;
    width: 5px;
}
::-webkit-scrollbar:hover {
    width: 10px;
}

/* Track */
::-webkit-scrollbar-track {
    box-shadow: inset 0 0 5px grey; 
    border-radius: 5px;
}

/* Handle */
::-webkit-scrollbar-thumb {
    background: grey; 
    border-radius: 5px;
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
    background: #000000; 
}



.mat-sort-header-container {
    justify-content: center;
    // display: flex;
    cursor: pointer;
    align-items: center;
    letter-spacing: normal;
    outline: 0;
}


.mat-drawer-inner-container {
    overflow: visible;
    -webkit-overflow-scrolling: touch;
}
