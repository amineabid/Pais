@import '~@angular/material/theming';

:host {
  @include mat-elevation(2);
  display: block;
  background: #f9f9f9;
  border-radius: 2px;
  padding: 16px 24px 8px;
  min-width: 150px;
}
@media (max-width: 600px) {
  mat-table{
    overflow: auto;
    width: 100%;
    height: 300px;
  }
